<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.CurrentTimeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/orange"
        android:paddingTop="60dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/indiaHtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current time in 'India'"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@+id/indiaHtv"
            app:layout_constraintStart_toEndOf="@+id/indiaHtv"
            app:layout_constraintBottom_toBottomOf="@+id/indiaHtv"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_outline_location_on_24"
            />
        <TextView
            android:id="@+id/indiaTTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/indiaHtv"
            app:layout_constraintStart_toStartOf="@+id/indiaHtv"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLay1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        >

        <TextView
            android:id="@+id/coloradoHTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current time in 'Colorado'"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/coloradoTTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/coloradoHTv"
            app:layout_constraintStart_toStartOf="@+id/coloradoHTv"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/SingaporeHTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current time in 'Singapore'"
            app:layout_constraintTop_toBottomOf="@+id/coloradoTTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/singaporeTTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/SingaporeHTv"
            app:layout_constraintStart_toStartOf="@+id/coloradoHTv"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/TaiwanHTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current time in 'Taiwan'"
            app:layout_constraintTop_toBottomOf="@+id/singaporeTTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/taiwanTTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TaiwanHTv"
            app:layout_constraintStart_toStartOf="@+id/coloradoHTv"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/houstonHTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current time in 'Houston'"
            app:layout_constraintTop_toBottomOf="@+id/taiwanTTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/houstonTTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/houstonHTv"
            app:layout_constraintStart_toStartOf="@+id/coloradoHTv"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/czechRepublicHTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current time in 'Czech Republic'"
            app:layout_constraintTop_toBottomOf="@+id/houstonTTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/czechRepublicTTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/czechRepublicHTv"
            app:layout_constraintStart_toStartOf="@+id/coloradoHTv"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/compareTimeHTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/czechRepublicTTv"
            app:layout_constraintStart_toStartOf="@+id/czechRepublicTTv"
            android:text="To compare time from different timezone"
            android:textColor="@color/click_blue"
            android:layout_marginTop="20dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/compareTimeClickTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/compareTimeHTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:text="Click here"
            android:textStyle="bold"
            android:textColor="@color/text_red"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>